package {	import flash.display.*	import flash.events.*;  import de.popforge.events.*	public class Bottom extends MovieClip {		public function Bottom() {		  name = "bottom"			addEventListener(Event.ADDED_TO_STAGE, init)		}				function init(e:Event) {      adjustToStage()		}				public function adjustToStage() {		  var max_size = (stage.stageWidth > stage.stageHeight) ? stage.stageHeight : stage.stageWidth      width = height = max_size - Globals.vars.padding*2      x = stage.stageWidth/2      y = stage.stageHeight/2		}					}}