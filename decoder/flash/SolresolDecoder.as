package {  import Globals	import flash.display.*	import flash.events.*;	public class SolresolDecoder extends MovieClip {	  	  var _top	  var _bottom	  var _rotator    		public function SolresolDecoder() {      saveFlashVarsToGlobals()      configureStage()      _bottom = new Bottom()      addChild(_bottom)            _top = new Top()      addChild(_top)      _rotator = new Rotator()      addChild(_rotator)		}		    private function saveFlashVarsToGlobals() {      var flash_vars = FlashVars.process(LoaderInfo(this.root.loaderInfo).parameters)      for (var k in flash_vars) Globals.vars[k] = flash_vars[k]    }    		private function configureStage() {      stage.align = StageAlign.TOP_LEFT      stage.scaleMode = StageScaleMode.NO_SCALE      stage.addEventListener(Event.RESIZE, resizeHandler);		}		    function resizeHandler(e:Event):void {      _bottom.adjustToStage();      _top.adjustToStage();      _rotator.adjustToStage();    }			}}